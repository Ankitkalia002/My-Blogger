	                  <% @articles.each do |article| %> 
	<div class="container-fluid">  
   
		<div class="row-fluid">
			
				   <div class="span5">
				   	   <h2><%=link_to article.title, article_path(:id=>article.id) %></h2>
			            <br><br>
			<div align="justify"><%= article.body %></div>
     <br><br>
    <% @comment=Comment.new %>
    <% @id = article.id %>
     <% if user_signed_in? %> 
      <%= render 'commentform' %>
      <% if article.user==current_user %>
        <br><br>
       <div class="btn"> <%= link_to 'Edit', edit_article_path(article) %></div>
       <div class="btn"> <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></div>
          <% end %>
            <% end %>
            </div>
             <div class="span3">
            
              <br>
    <%= image_tag article.article_image(:large),:size => "300x300" %>
</div>
			
		<div class="span4 pull-right">
      <h3 align="center">RECENT COMMENTS</h3>
			<div class="well">
				<div class="media">
        
					
			
		           <% article.comments.each do |d| %>
			         <br>
			         <br>
               <div class="media-body">
                 <a class="pull-left" href="#">
    <%=link_to (image_tag d.user.user_image(:thumb), :size => "50x50"),userprofile_path(id: d.user.id) %>
    
			                 <h4 class="media-heading"><%=link_to d.user.sab_name, userprofile_path(id: d.user.id) %>
                             </h4>
                           
			                 



	
                      <div>  
                                   <%= d.comment %>
                      </div>
             </div>

			
		           <% if d.user==current_user %><%= link_to "edit" , edit_comment_path(:id=>d.id) %>
			       <% end %>
			        <% if user_signed_in? %>
			        <% if current_user.email=="ankit3732@gmail.com" || d.user==current_user %><%= link_to "delete" ,comment_path(:id=>d.id) ,method: :delete  %>
			         <% end %>
		              <% end %>
		                <% end %>
                    </div>
	
	</div>
</div>
</div>
	
		    </div>
	</div>
      
	<% end %>

